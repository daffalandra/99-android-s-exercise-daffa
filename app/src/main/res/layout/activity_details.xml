<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detailsActivity">

    <ScrollView
        android:id="@+id/scroll_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imgDetailPage"
                android:layout_width="match_parent"
                android:layout_height="281dp"
                android:background="@drawable/ic_launcher_background"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$5,700"
                    android:textSize="23sp"
                    android:textColor="@color/darkblue"
                    android:textStyle="bold"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp" />

                <TextView
                    android:id="@+id/txtName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ParkView Apartment"
                    android:textStyle="bold"
                    android:textSize="19sp"
                    android:textColor="@color/darkblue"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp" />

                <TextView
                    android:id="@+id/txtAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 Keppel Bay View Â· Condo for Rent"
                    android:textSize="14sp"
                    android:textColor="@color/darkblue"
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="20dp" />

                <TextView
                    android:id="@+id/txtAddress1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Telok Blangah / Harbourfront (D4)"
                    android:textSize="14sp"
                    android:textColor="@color/darkblue"
                    android:layout_marginLeft="20dp" />

                <LinearLayout
                    android:id="@+id/view_on_map"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:background="@drawable/map_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View on Map"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginLeft="4dp"
                        android:textColor="@color/blue" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/attributesInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/bed_icon" />

                    <TextView
                        android:id="@+id/bedrooms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3 Beds"
                        android:textColor="@color/darkblue"
                        android:layout_marginLeft="8dp"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/bathtub_icon"
                        android:layout_marginLeft="20dp" />

                    <TextView
                        android:id="@+id/bathrooms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2 Bathrooms"
                        android:textColor="@color/darkblue"
                        android:layout_marginLeft="8dp"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/area_icon"
                        android:layout_marginLeft="20dp" />

                    <TextView
                        android:id="@+id/areaSize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2561 sqft"
                        android:textColor="@color/darkblue"
                        android:layout_marginLeft="8dp"
                        android:textSize="16sp" />
                </LinearLayout>

            </LinearLayout>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Property Details"
                android:textColor="@color/darkblue"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:textStyle="bold"
                android:textSize="19sp"
                android:layout_marginLeft="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:paddingBottom="20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/attributesLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Property attribute labels -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price/sqft"
                        android:textColor="@color/darkblue"
                        android:layout_marginLeft="20dp"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Floor Level"
                        android:textColor="@color/darkblue"
                        android:textSize="16sp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp">
                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Furnishing"
                        android:textColor="@color/darkblue"
                        android:textSize="16sp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp">
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Facing"
                        android:textColor="@color/darkblue"
                        android:textSize="16sp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp">
                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Overlooking View"
                        android:textColor="@color/darkblue"
                        android:textSize="16sp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp">
                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Built Year (TOP)"
                        android:textColor="@color/darkblue"
                        android:textSize="16sp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp">
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tenure"
                        android:textColor="@color/darkblue"
                        android:textSize="16sp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp">
                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Property Type"
                        android:textColor="@color/darkblue"
                        android:textSize="16sp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp">
                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Last Updated"
                        android:textColor="@color/darkblue"
                        android:textSize="16sp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp">
                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/attributesValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="60dp"
                    android:orientation="vertical">

                    <!-- Property attribute values -->
                    <TextView
                        android:id="@+id/txtPriceSqft"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$1,812 psf"
                        android:textColor="@color/darkblue"
                        android:layout_marginLeft="20dp"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/txtFloorLevel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="HIGH (40 total)"
                        android:textColor="@color/darkblue"
                        android:textSize="16sp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp">
                    </TextView>

                    <TextView
                        android:id="@+id/txtFurnishing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Unfurnished"
                        android:textColor="@color/darkblue"
                        android:textSize="16sp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp">
                    </TextView>
                    <TextView
                        android:id="@+id/txtFacing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="North"
                        android:textColor="@color/darkblue"
                        android:textSize="16sp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp">
                    </TextView>

                    <TextView
                        android:id="@+id/txtOverlooking"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Park View"
                        android:textColor="@color/darkblue"
                        android:textSize="16sp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp">
                    </TextView>

                    <TextView
                        android:id="@+id/txtBuiltYear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2020"
                        android:textColor="@color/darkblue"
                        android:textSize="16sp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp">
                    </TextView>

                    <TextView
                        android:id="@+id/txtTenure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="99-year leasehold"
                        android:textColor="@color/darkblue"
                        android:textSize="16sp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp">
                    </TextView>

                    <TextView
                        android:id="@+id/txtType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Condo"
                        android:textColor="@color/darkblue"
                        android:textSize="16sp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp">
                    </TextView>

                    <TextView
                        android:id="@+id/txtLastUpdated"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2 min ago"
                        android:textColor="@color/darkblue"
                        android:textSize="16sp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp">
                    </TextView>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textSize="19sp"
                    android:textStyle="bold"
                    android:textColor="@color/darkblue"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:id="@+id/txtListingDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txtDescription"
                    android:textSize="16sp"
                    android:textColor="@color/darkblue"
                    android:letterSpacing="0.04"
                    android:lineSpacingExtra="6sp"
                    android:translationY="-3.07sp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp" />
            </LinearLayout>


        </LinearLayout>


    </ScrollView>

    <ImageView
        android:id="@+id/back_btn"
        android:layout_width="14dp"
        android:layout_height="24dp"
        android:src="@drawable/back_icon"
        android:layout_marginTop="25dp"
        android:layout_marginStart="25dp" />
</FrameLayout>