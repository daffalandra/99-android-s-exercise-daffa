<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/listingItem"
        app:cardElevation="5dp"
        android:layout_width="367dp"
        android:layout_height="320dp"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="10dp"
        android:layout_marginVertical="5dp"
        app:cardBackgroundColor="@color/white">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvImage"
            android:layout_width="328dp"
            android:layout_height="162dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="12dp"
            app:cardBackgroundColor="@color/design_default_color_secondary"
            app:cardCornerRadius="5dp">

            <ImageView
                android:id="@+id/listingImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:scaleType="center" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/listingName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Parkview Apartments"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/darkblue"
            android:layout_marginTop="180dp"
            android:layout_marginLeft="12dp">
        </TextView>

        <TextView
            android:id="@+id/listingAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12 Meyappa Chettiar Rd D13"
            android:textSize="12sp"
            android:layout_marginTop="205dp"
            android:textColor="@color/gray"
            android:layout_marginLeft="12dp">
        </TextView>

        <TextView
            android:id="@+id/listingCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exec Condo 路 2020 路 99 yrs"
            android:textSize="12sp"
            android:layout_marginTop="224dp"
            android:textColor="@color/gray"
            android:layout_marginLeft="12dp">
        </TextView>

        <TextView
            android:id="@+id/listingDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3 Beds 路 2 Baths 路 2,561 sqft"
            android:textSize="14sp"
            android:layout_marginTop="245dp"
            android:textColor="@color/darkblue"
            android:layout_marginLeft="12dp"/>

        <TextView
            android:id="@+id/listingPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$5,700/mo"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="275dp"
            android:textColor="@color/darkblue"
            android:layout_marginLeft="12dp"/>

    </androidx.cardview.widget.CardView>
</RelativeLayout>